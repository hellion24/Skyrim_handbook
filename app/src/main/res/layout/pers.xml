<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/fon2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/lesa_sibirii" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="376dp"
            android:layout_height="79dp"
            android:layout_marginTop="16dp"
            android:alpha="0.85"
            android:cropToPadding="false"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/fon2"
            app:srcCompat="@drawable/knopkaser" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="Персонажи"
            android:textColor="#ffffff"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView4"
            app:layout_constraintEnd_toEndOf="@+id/imageView4"
            app:layout_constraintStart_toStartOf="@+id/imageView4"
            app:layout_constraintTop_toTopOf="@+id/imageView4" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="389dp"
            android:layout_height="672dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView4">

            <ImageButton
                android:id="@+id/pers"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:layout_marginTop="100dp"
                android:alpha="0.85"
                android:background="@color/cardview_shadow_end_color"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toTopOf="@+id/lokacii"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/knopkaser" />

            <ImageButton
                android:id="@+id/lokacii"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:alpha="0.85"
                android:background="@color/cardview_shadow_end_color"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toTopOf="@+id/quests"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pers"
                app:srcCompat="@drawable/knopkaser" />

            <ImageButton
                android:id="@+id/quests"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:alpha="0.85"
                android:background="@color/cardview_shadow_end_color"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toTopOf="@+id/skills"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lokacii"
                app:srcCompat="@drawable/knopkaser" />

            <ImageButton
                android:id="@+id/skills"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:alpha="0.85"
                android:background="@color/cardview_shadow_end_color"
                android:scaleType="fitXY"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/quests"
                app:layout_constraintBottom_toTopOf="@id/skills3"
                app:srcCompat="@drawable/knopkaser" />

            <ImageButton
                android:id="@+id/skills3"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:layout_marginBottom="170dp"
                android:alpha="0.85"
                android:background="@color/cardview_shadow_end_color"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toTopOf="@+id/svyaz"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.507"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/skills"
                app:srcCompat="@drawable/knopkaser" />

            <ImageButton
                android:id="@+id/svyaz"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_marginTop="64dp"
                android:layout_marginBottom="16dp"
                android:alpha="0.85"
                android:background="@color/cardview_shadow_end_color"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/skills3"
                app:srcCompat="@drawable/knopkaser" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="Лидия"
                android:textColor="#ffffff"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@+id/lokacii"
                app:layout_constraintEnd_toEndOf="@+id/lokacii"
                app:layout_constraintStart_toStartOf="@+id/lokacii"
                app:layout_constraintTop_toTopOf="@+id/lokacii" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="Довакин"
                android:textColor="#ffffff"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@+id/pers"
                app:layout_constraintEnd_toEndOf="@+id/pers"
                app:layout_constraintStart_toStartOf="@+id/pers"
                app:layout_constraintTop_toTopOf="@+id/pers" />

            <TextView
                android:id="@+id/svya"
                android:layout_width="wrap_content"
                android:layout_height="49dp"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="Назад"
                android:textColor="#ffffff"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@+id/svyaz"
                app:layout_constraintEnd_toEndOf="@+id/svyaz"
                app:layout_constraintStart_toStartOf="@+id/svyaz"
                app:layout_constraintTop_toTopOf="@+id/svyaz" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="Хадвар"
                android:textColor="#ffffff"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@+id/skills"
                app:layout_constraintEnd_toEndOf="@+id/skills"
                app:layout_constraintStart_toStartOf="@+id/skills"
                app:layout_constraintTop_toTopOf="@+id/skills" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="Хадвар"
                android:textColor="#ffffff"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@+id/skills3"
                app:layout_constraintEnd_toEndOf="@+id/skills3"
                app:layout_constraintStart_toStartOf="@+id/skills3"
                app:layout_constraintTop_toTopOf="@+id/skills3" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="Ралоф"
                android:textColor="#ffffff"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@+id/quests"
                app:layout_constraintEnd_toEndOf="@+id/quests"
                app:layout_constraintStart_toStartOf="@+id/quests"
                app:layout_constraintTop_toTopOf="@+id/quests" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>