<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/fon3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/lesa_sibirii" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="383dp"
        android:layout_height="135dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:alpha="0.8"
        android:cropToPadding="false"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="@+id/fon2"
        app:layout_constraintTop_toTopOf="@+id/fon2"

        app:srcCompat="@drawable/knopkaser" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:gravity="center"
        android:text='Информационно-справочная система "Контроль экологического состояния местности"'
        android:textColor="#ffffff"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fon3" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="347dp"
        android:layout_height="99dp"
        android:background="@drawable/knopkaser"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="Введите логин и пароль администратора для продолжения"
        android:textColor="#ffffff"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <ImageButton
        android:id="@+id/dann2"
        android:layout_width="135dp"
        android:layout_height="50dp"
        android:layout_marginBottom="64dp"
        android:background="@color/cardview_shadow_end_color"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/fon3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/knopkaser" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="Меню"
        android:textColor="#ffffff"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/dann2"
        app:layout_constraintEnd_toEndOf="@+id/dann2"
        app:layout_constraintStart_toStartOf="@+id/dann2"
        app:layout_constraintTop_toTopOf="@+id/dann2" />

    <TextView
        android:id="@+id/osh1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView15" />

    <EditText
        android:id="@+id/login"
        android:layout_width="335dp"
        android:layout_height="82dp"
        android:background="@drawable/lightser"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Логин"
        app:layout_constraintBottom_toTopOf="@+id/login2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView15" />

    <EditText
        android:id="@+id/login2"
        android:layout_width="335dp"
        android:layout_height="82dp"
        android:background="@drawable/lightser"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Пароль"
        app:layout_constraintBottom_toTopOf="@+id/osh1"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login" />

    <ImageButton
        android:id="@+id/dann5"
        android:layout_width="178dp"
        android:layout_height="54dp"
        android:background="@color/cardview_shadow_end_color"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/dann2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/osh1"
        app:srcCompat="@drawable/knopkaser" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="Подтвердить"
        android:textColor="#ffffff"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/dann5"
        app:layout_constraintEnd_toEndOf="@+id/dann5"
        app:layout_constraintStart_toStartOf="@+id/dann5"
        app:layout_constraintTop_toTopOf="@+id/dann5" />

</androidx.constraintlayout.widget.ConstraintLayout>